{
  "compilerOptions": {
    "target": "ES2017", // Cible ES2017
    "lib": ["dom", "dom.iterable", "esnext"], // Bibliothèques incluses
    "allowJs": true, // Autoriser les fichiers JavaScript
    "skipLibCheck": true, // Ignorer la vérification des fichiers de déclaration
    "strict": true, // Activer toutes les vérifications strictes de TypeScript
    "noEmit": true, // Ne pas émettre de fichiers JavaScript
    "esModuleInterop": true, // Permettre l'interopérabilité ES Modules
    "module": "esnext", // Utiliser les modules ES
    "moduleResolution": "bundler", // Résolution des modules pour les bundlers
    "resolveJsonModule": true, // Permettre l'import de fichiers JSON
    "isolatedModules": true, // Assurer la compatibilité avec les modules isolés
    "jsx": "preserve", // Conserver la syntaxe JSX
    "incremental": true, // Activer la compilation incrémentielle
    "baseUrl": ".", // Définir le répertoire racine comme base pour les imports
    "plugins": [
      {
        "name": "next" // Plugin pour Next.js
      }
    ],
    "paths": {
      "@/*": ["./*"] // Alias pour les chemins
    }
  },
  "include": [
    "next-env.d.ts", // Fichier de déclaration Next.js
    "**/*.ts", // Inclure tous les fichiers TypeScript
    "**/*.tsx", // Inclure tous les fichiers TSX
    ".next/types/**/*.ts" // Inclure les types générés par Next.js
  ],
  "exclude": ["node_modules"] // Exclure le dossier node_modules
}